{% style %}
  /* Fonts - Assuming standard web fonts or theme fonts */
  .cb-core-wrapper {
    font-family: var(--font-body-family);
    overflow-x: hidden;
    color: #001e62; /* Deep Blue */
    background: #ffffff;
  }

  /* Utility for content constraint */
  .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
  }

  .cb-btn {
    display: inline-block;
    padding: 12px 32px;
    border-radius: 50px;
    border: 1px solid #2a68fe;
    color: #2a68fe;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    margin-top: 20px;
    background: transparent;
  }
  .cb-btn:hover {
    background: #2a68fe;
    color: white;
  }
  .cb-btn--green {
    background: #00d796;
    border-color: #00d796;
    color: white;
  }
  .cb-btn--green:hover {
    background: #00b57e;
  }
  .cb-btn--small {
    padding: 8px 20px;
    font-size: 0.9rem;
  }

  /* Hero */
  .cb-hero {
    position: relative;
    padding: 60px 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  .cb-hero__bg-text {
    position: absolute;
    top: 0;
    left: 0;
    font-size: 25vw;
    line-height: 0.8;
    font-weight: 700;
    color: #f0f4f8;
    z-index: -1;
    opacity: 0.8;
    pointer-events: none;
  }
  .cb-hero__grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }
  .cb-hero__content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    width: 100%;
    gap: 20px;
  }
  .cb-hero__product {
    text-align: center;
  }
  .cb-hero__product img {
    max-height: 600px;
    width: auto;
    max-width: 100%;
  }
  .cb-hero__info {
    z-index: 1;
    text-align: left;
  }
  .cb-hero__title {
    font-size: 3rem;
    line-height: 1.1;
    color: #001e62;
    margin-bottom: 20px;
    font-weight: 800;
  }
  .cb-hero__product-secondary {
    text-align: center;
  }
  .cb-hero__product-secondary img {
    max-height: 500px;
    width: auto;
    max-width: 100%;
  }

  /* Hydration */
  .cb-hydration {
    padding: 80px 0;
  }
  .cb-hydration__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  .cb-hydration__image img {
    width: 100%;
    border-radius: 20px;
    height: auto;
  }
  .cb-hydration__content h2 {
    font-size: 2.5rem;
    color: #001e62;
    margin-bottom: 20px;
  }

  /* Marquee */
  .cb-marquee {
    background: #ffffff;
    color: #2a68fe;
    padding: 20px 0;
    overflow: hidden;
    white-space: nowrap;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }
  .cb-marquee__content {
    display: inline-block;
    animation: marquee 30s linear infinite;
    font-size: 1.2rem;
    font-weight: 800;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  .cb-drop {
    margin: 0 20px;
  }
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Comfort */
  .cb-comfort {
    padding: 80px 0;
  }
  .cb-comfort__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }
  .cb-comfort__content h2 {
    font-size: 2.5rem;
    color: #001e62;
  }
  .cb-comfort__image img {
    width: 100%;
    height: auto;
  }

  /* Sustainable */
  .cb-sustainable {
    position: relative;
    padding: 100px 0;
    overflow: hidden;
    width: 100%;
  }
  .cb-sustainable__bg-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 12vw;
    font-weight: 800;
    color: #f5f7fa;
    z-index: -1;
    line-height: 0.9;
    text-align: center;
    width: 100%;
    pointer-events: none;
  }
  .cb-sustainable__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }
  .cb-sustainable__image img {
    width: 100%;
    height: auto;
  }
  .cb-sustainable__list ul {
    list-style: none;
    padding: 0;
  }
  .cb-sustainable__list li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20px;
    font-size: 1.1rem;
    font-weight: 600;
  }
  .cb-icon-drop {
    color: #2a68fe;
    margin-right: 10px;
    font-size: 1.2rem;
  }

  /* Why */
  .cb-why {
    padding: 80px 0;
    text-align: right;
  }
  .cb-why__header {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    text-align: left;
  }
  .cb-why__big-text {
    font-size: 5rem;
    font-weight: 300;
    line-height: 1;
    color: #7da5ff;
    text-align: right;
  }
  .cb-why__big-text .cb-highlight {
    font-weight: 300; /* Or regular */
  }

  /* Characteristics */
  .cb-chars {
    padding: 60px 0;
    position: relative;
  }
  .cb-chars__title-bg {
    font-size: 10vw;
    color: #f5f7fa;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    text-align: center;
    margin: 0;
    font-weight: 900;
    pointer-events: none;
  }
  .cb-chars__grid {
    display: grid;
    grid-template-columns: 40% 60%;
    gap: 40px;
    background: #f9f9f9;
    padding: 40px;
    border-radius: 20px;
    margin-top: 40px;
  }
  .cb-chars__tabs {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .cb-chars__image img {
    width: 100%;
    height: auto;
    mix-blend-mode: multiply;
  }
  .cb-tab {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
    font-weight: 600;
    padding: 10px;
    border-radius: 10px;
  }
  .cb-tab.active {
    background: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    color: #2a68fe;
  }
  .cb-tab-content {
    background: white;
    padding: 20px;
    border-radius: 15px;
    display: none; /* JS needed to toggle */
  }
  .cb-tab-content.active {
    display: block;
  }
  .cb-spec-row {
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 10px 0;
  }
  .cb-spec-row:last-child {
    border-bottom: none;
  }

  /* Bottom CTA */
  .cb-cta-bottom {
    margin-top: 80px;
    margin-bottom: 40px;
    padding-bottom: 60px;
  }
  .cb-cta-bottom__container {
    background: #001e62;
    border-radius: 30px;
    overflow: hidden;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    position: relative;
  }
  .cb-cta-bottom__content {
    padding: 60px;
    color: white;
    z-index: 2;
  }
  .cb-cta-bottom__content h2 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 20px;
  }
  .cb-cta-bottom__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .cb-hero__grid,
    .cb-hero__content,
    .cb-hydration__grid,
    .cb-comfort__grid,
    .cb-sustainable__grid,
    .cb-chars__grid,
    .cb-cta-bottom__container {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .cb-hero__info {
      text-align: center;
      order: -1;
    }
    .cb-hero__content {
      display: flex;
      flex-direction: column;
    }
    .cb-hero__bg-text {
      font-size: 30vw;
      top: 100px;
    }
    .cb-why__big-text {
      font-size: 3rem;
      text-align: center;
    }
    .cb-why__header {
      text-align: center;
    }
    .cb-chars__grid {
      padding: 20px;
    }
    .cb-cta-bottom__image {
      height: 300px;
    }
    .cb-hero__product img,
    .cb-hero__product-secondary img {
      max-height: 300px;
    }
  }
{% endstyle %}

<!-- Simple Script for Tabs -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.cb-tab');
    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        // Remove active from all siblings
        tab.parentNode.querySelectorAll('.cb-tab').forEach((t) => t.classList.remove('active'));
        // Add active to click
        tab.classList.add('active');

        // Hide all contents
        const container = tab.closest('.cb-chars__grid');
        container.querySelectorAll('.cb-tab-content').forEach((c) => (c.style.display = 'none'));

        // Show target
        const target = tab.dataset.target;
        const content = document.getElementById(target);
        if (content) content.style.display = 'block';
      });
    });
  });
</script>

