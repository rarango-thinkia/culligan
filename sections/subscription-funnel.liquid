<script>
  let currentStep = 1;
  const totalSteps = 6;

  function updateUI() {
    // 1. Hide all steps
    document.querySelectorAll('.sf-step').forEach(el => el.classList.add('hidden'));
    
    // 2. Show current step
    const currentEl = document.querySelector(`.sf-step[data-step="${currentStep}"]`);
    if(currentEl) currentEl.classList.remove('hidden');

    // 3. Update Progress Bar
    const progress = (currentStep / totalSteps) * 100;
    document.getElementById('sf-progress').style.width = `${progress}%`;

    // 4. Update Buttons
    const btnBack = document.getElementById('btn-back');
    const btnNext = document.getElementById('btn-next');

    if (currentStep === 1) {
      btnBack.style.display = 'none'; // Optional: hide back on first step or link to home
    } else {
      btnBack.style.display = 'block';
    }

    if (currentStep === totalSteps) {
      btnNext.innerHTML = 'Pagar suscripci√≥n >';
    } else {
      btnNext.innerHTML = 'Continuar >';
    }

    // Scroll to top of container
    document.querySelector('.sf-header').scrollIntoView({ behavior: 'smooth' });
  }

  function changeStep(direction) {
    const nextText = document.getElementById('btn-next').innerText;
    
    // If last step and clicking next -> Alert (Mock checkout)
    if (currentStep === totalSteps && direction === 1) {
       alert('Redirigiendo a checkout...');
       return;
    }

    // Boundary checks
    if (currentStep + direction < 1) return;
    if (currentStep + direction > totalSteps) return;

    currentStep += direction;
    updateUI();
  }

  // Visual selection logic
  function selectCard(card) {
    // Deselect siblings
    const parent = card.parentElement;
    parent.querySelectorAll('.sf-select-card, .sf-plan-card').forEach(c => c.classList.remove('selected'));
    // Select clicked
    card.classList.add('selected');
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', updateUI);
</script>
