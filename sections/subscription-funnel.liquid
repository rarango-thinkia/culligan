    <!-- Navigation Footer -->
    <div class="sf-footer-nav sf-footer-separator" id="sf-footer-nav">
       <button type="button" class="btn-plain" id="btn-back" onclick="navigate(-1)"> &lt; Atrás</button>
       
       <div id="sf-footer-center" class="text-center" style="flex:1; padding:0 10px;"></div>
       
       <button type="button" class="btn-primary" id="btn-next" onclick="navigate(1)">Continuar &gt;</button>
