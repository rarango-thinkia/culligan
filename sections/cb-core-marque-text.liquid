{% style %}
  .cb-marquee {
    background: #ffffff;
    color: #2a68fe;
    padding: 20px 0;
    overflow: hidden;
    white-space: nowrap;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }
  .cb-marquee__content {
    display: inline-block;
    animation: marquee 30s linear infinite;
    font-size: 1.2rem;
    font-weight: 800;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  .cb-drop {
    margin: 0 20px;
  }
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{% endstyle %}

